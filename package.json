{
  "name": "webpack2-library-starter",
  "version": "1.0.0",
  "description": "Produce universal library with webpack2 and es6",
  "main": "lib/library.js",
  "scripts": {
    "build": "webpack --env.build",
    "dev": "webpack --progress --colors --watch --env.dev",
    "test": "mocha --compilers js:babel-core/register --colors ./test/*.spec.js",
    "test:watch": "mocha --compilers js:babel-core/register --colors -w ./test/*.spec.js"
  },
  "repository": "git@github.com:GuoYongfeng/webpack2-library-starter.git",
  "keywords": [
    "webpack",
    "es6",
    "starter",
    "library",
    "universal",
    "umd",
    "commonjs"
  ],
  "author": "guoyff <guoyff@yonyou.com>",
  "license": "MIT",
  "devDependencies": {
    "babel": "6.5.2",
    "babel-core": "6.22.1",
    "babel-eslint": "5.0.0",
    "babel-loader": "6.2.10",
    "babel-plugin-add-module-exports": "0.1.2",
    "babel-preset-es2015": "6.22.0",
    "chai": "3.4.1",
    "eslint": "1.7.2",
    "eslint-loader": "1.6.1",
    "mocha": "2.3.4",
    "webpack": "^2.2.1",
    "yargs": "^6.6.0"
  }
}
